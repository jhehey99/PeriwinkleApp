<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout 
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

        <TextView
				android:id="@+id/txt_accelerometer"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="0.15"
				android:text="Accelerometer Data"
				android:textColor="#4689C8"
				android:textSize="20dp"
				android:layout_gravity="center_vertical"
				android:layout_marginLeft="20dp"/>

        <microcharts.droid.ChartView
				android:id="@+id/char_accel_x"
				android:layout_width="fill_parent"
				android:layout_height="250dp" />

        <microcharts.droid.ChartView
				android:id="@+id/char_accel_y"
				android:layout_width="fill_parent"
				android:layout_height="250dp" />

        <microcharts.droid.ChartView
				android:id="@+id/char_accel_z"
				android:layout_width="fill_parent"
				android:layout_height="250dp" />

        <Button
				android:text="Calibrate"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="0.5"
				android:paddingTop="10dp"
				android:paddingBottom="10dp"
				android:textSize="20dp"
				android:id="@+id/btn_calibrate"
				android:layout_marginTop="10dp"
				android:layout_marginLeft="20dp"
				android:layout_marginRight="10dp"
				android:textColor="@android:color/white"
				android:background="@color/primary_dark" />

        <Button
				android:text="Record Accelerometer"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="0.5"
				android:paddingTop="10dp"
				android:paddingBottom="10dp"
				android:textSize="20dp"
				android:id="@+id/btn_record_accelerometer"
				android:layout_marginTop="10dp"
				android:layout_marginLeft="20dp"
				android:layout_marginRight="10dp"
				android:textColor="@android:color/white"
				android:background="@color/primary_dark" />

    </LinearLayout>

</ScrollView>
